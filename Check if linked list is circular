class Solution:
    def isCircular(self, head):
        if head is None:
            return False
        temp = head.next
        while temp is not None and temp != head:
            temp = temp.next
        return temp == head




c-->
int isCircular(struct Node* head) {
    if (head == NULL) return 0;
    struct Node* temp = head->next;
    while (temp != NULL && temp != head) {
        temp = temp->next;
    }
    return (temp == head);
}
